{
  "root": true,
  "extends": ["eslint:recommended", "prettier", "plugin:react/recommended"],
  "env": {
    "browser": true,
    "commonjs": true,
    "node": true,
    "es6": true
  },
  "plugins": ["prettier", "react"],
  "parserOptions": {
    "parser": "babel-eslint",
    "sourceType": "module",
    "ecmaVersion": 2020
  },
  "ignorePatterns": ["node_modules/", "functions/"],
  "rules": {
    "react/display-name": "off",
    "no-unused-vars": "warn",
    "react/prop-types": "off",
    "quotes": ["error", "double"],
    "semi": ["error", "never"]
  }
}
